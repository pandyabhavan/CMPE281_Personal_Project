<html lang="en">

<head>
<title>Login</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet"
	href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet"
	href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
<script
	src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
<script src="angularjs/loginController.js"></script>
</head>
<style>
#login {
	padding-top: 10%;
}

#login .form-wrap {
	width: 30%;
	margin: 0 auto;
}

#login h1 {
	color: #1fa67b;
	font-size: 18px;
	text-align: center;
	font-weight: bold;
	padding-bottom: 20px;
}

#login .form-group {
	margin-bottom: 25px;
}

#login .btn.btn-custom {
	font-size: 14px;
	margin-bottom: 20px;
}

#login .forget {
	font-size: 13px;
	text-align: center;
	display: block;
}

.form-control {
	color: #212121;
}

.btn-custom {
	color: #fff;
	background-color: #1fa67b;
}

.btn-custom:hover, .btn-custom:focus {
	color: #fff;
}
</style>

<body ng-app="project" ng-controller="loginController">
	<section id="login">
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<div class="form-wrap">
						<h1>Log in with your email account</h1>
						<form>
							<div class="form-group">
								<input
									type="email" class="form-control"
									placeholder="somebody@example.com" ng-model = "email" required>
							</div>
							<div class="form-group">
								<input
									type="password" class="form-control"
									placeholder="Password" ng-model="password" required>
							</div>
							<div class="form-group">
								<div class="dropdown">
									<select ng-model="tenant"
										class="form-control dropdown">
										<option label="Tenant-1" value="tenant1">Tenant-1</option>
										<option label="Tenant-2" value="tenant2">Tenant-2</option>
										<option label="Tenant-3" value="tenant3">Tenant-3</option>
										<option label="Tenant-4" value="tenant4">Tenant-4</option>
									</select>
								</div>

							</div>

							<input type="submit"
								class="btn btn-custom btn-lg btn-block" ng-click="login();" value="Log in">
						</form>
						<hr>
					</div>
				</div>
			</div>
		</div>
	</section>
</body>
</html>
